 <div class="container mt-5">
    <h1 class="mb-3">Stupid Coaching</h1>
    <div class="d-flex flex-column mb-3">
      <div class="d-flex mb-3">
        <div class="border-start p-3" style="border-left: 6px solid #6c757d; flex: 1;">
          <p><%= @question %><br>-You</p>
        </div>
      </div>
      <div class="d-flex">
        <div class="border-start p-3 bg-warning" style="border-left: 6px solid #6c757d; flex: 1;">
          <p><%= @answer %><br>-Your coach</p>
        </div>
      </div>
    </div>
    <a href="<%= ask_path %>" class="text-decoration-none">Ask a new question</a>
  </div>
